<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/table_iconView"
        android:layout_width="@dimen/item_left_icon_large"
        android:layout_height="@dimen/item_left_icon_large"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:scaleType="fitXY"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/table_arrow"
        android:layout_toRightOf="@id/table_iconView"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/table_left_text"
            style="@style/text_dark_gray_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/table_left_text_2"
            style="@style/text_light_gray_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/table_left_text_3"
            style="@style/text_light_gray_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/table_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/table_arrow"
        android:visibility="gone" />

    <ToggleButton
        android:id="@+id/table_toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="36sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/table_switch_selector"
        android:textOff=""
        android:textOn=""
        android:visibility="gone" />

    <TextView
        android:id="@+id/table_right_text"
        style="@style/text_dark_blue_18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="3.3dp"
        android:layout_toLeftOf="@+id/table_arrow"
        android:singleLine="true"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/table_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@id/table_arrow"
        android:adjustViewBounds="true"
        android:visibility="invisible" />

</merge>