<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:background="@drawable/tab_content_bg">
    
    <TextView android:id="@+id/tab_description" android:layout_width="wrap_content"
	    android:layout_height="wrap_content" android:textColor="#ffffff" 
	    android:textSize="10sp" android:layout_centerInParent="true"
	    android:gravity="center"/>
    
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:id="@+id/tab_flag" android:textColor="#ffffff" android:textSize="10sp"
        android:layout_marginLeft="-7dp"
        android:singleLine="true"
        android:gravity="center" android:layout_toRightOf="@id/tab_description"
        android:background="@drawable/msg_flag_bg" android:visibility="gone"/>
</RelativeLayout>