<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <LinearLayout
        android:id="@+id/images_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/images_layout"
        android:gravity="center" >

        <ImageView
            android:id="@+id/table_left_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="29dp"
            android:maxWidth="29dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/table_left_big_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxHeight="43dp"
            android:maxWidth="43dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/images_layout"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/table_left_text"
            style="@style/text_dark_gray_26"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/line2_textlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/table_left_text_2"
                style="@style/text_light_gray_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="TextView"
                android:visibility="gone" />

            <TextView
                android:id="@+id/table_left_text_3"
                style="@style/text_light_gray_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:text="TextView"
                android:visibility="gone" />

            <TextView
                android:id="@+id/table_left_text_4"
                style="@style/text_light_gray_18"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="6dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="TextView"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/table_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:src="@drawable/table_arrow"
        android:visibility="gone" />

    <ToggleButton
        android:id="@+id/table_toggleButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/table_switch_selector"
        android:textOff=""
        android:textOn=""
        android:visibility="gone" />

    <ImageView
        android:id="@+id/table_right_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/table_arrow"
        android:adjustViewBounds="true"
        android:maxHeight="20dp"
        android:maxWidth="32dp"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@id/table_right_image"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/table_right_bottom_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginTop="4dp"
            android:adjustViewBounds="true"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/table_right_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:textColor="#0077bb"
            android:textSize="16sp"
            android:visibility="invisible" />
    </LinearLayout>

</RelativeLayout>