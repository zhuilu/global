<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="wrap_content"
    android:background="@drawable/app_titlebar_bg">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        style="@style/text_white_28" android:paddingTop="10.7dp" android:paddingBottom="10.7dp"
        android:id="@+id/title_bar_title" android:layout_centerInParent="true"/>
    
	<Button style="@style/titlebar_button_style" android:layout_alignParentRight="true"
	    android:layout_centerVertical="true" android:layout_marginRight="6dp"
	    android:gravity="center" android:textColor="@color/colorccc"
	    android:id="@+id/title_bar_generic_button" android:textSize="12sp"/>
	
	<LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
	    android:layout_centerVertical="true" android:layout_marginRight="7dp"
	    android:layout_alignParentRight="true" android:orientation="horizontal"
	    android:id="@+id/switch_container" android:visibility="gone">
	    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
	        style="@style/switch_btn_left_style" android:layout_weight="1"
	        android:id="@+id/title_bar_left_button"/>
	    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
	        style="@style/switch_btn_right_style" android:layout_weight="1"
	        android:id="@+id/title_bar_right_button"/>
	</LinearLayout>
</RelativeLayout>