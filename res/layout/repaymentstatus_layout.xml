<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingRight="12dp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/table_left_text"
            style="@style/text_dark_gray_26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <TextView
            android:id="@+id/table_left_text_2"
            style="@style/text_light_gray_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible" />
    </LinearLayout>

    <ImageView
        android:id="@+id/table_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:src="@drawable/table_arrow"
        android:visibility="visible" />

    <ToggleButton
        android:id="@+id/table_toggleButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/table_switch_selector"
        android:textOff=""
        android:textOn=""
        android:visibility="gone"
        />

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toLeftOf="@+id/table_arrow"
        android:orientation="horizontal">
        
         <TextView
        android:id="@+id/table_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textColor="#0077bb"
        android:textSize="16sp"
        android:visibility="visible" />
         
         <TextView
        android:id="@+id/table_right_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text=""
        android:textColor="#0077bb"
        android:paddingBottom="-4dp"
        android:textSize="16sp"
        android:visibility="visible" />
        
   		 <TextView
        android:id="@+id/table_right_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text=""
        android:textColor="#0077bb"
        android:textSize="16sp"
        android:visibility="visible" />
   
    </LinearLayout>

</RelativeLayout>