<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item android:state_enabled="false" android:drawable="@drawable/title_right_btn_normal" />
    
    <!-- Pressed -->
    <item android:state_pressed="true" android:state_enabled="true" android:drawable="@drawable/title_right_btn_pressed" />
    
    <!-- Focused states -->
    <item android:state_focused="true" android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/title_right_btn_pressed" />
    
    <!-- Non focused states -->
    <item android:state_focused="false" android:state_pressed="false" android:state_enabled="true" android:drawable="@drawable/title_right_btn_normal" />
</selector>